'From Squeak4.5 of 19 February 2014 [latest update: #13680] on 15 March 2015 at 4:47:50 am'!PegCollection subclass: #PlayerPegs	instanceVariableNames: ''	classVariableNames: ''	poolDictionaries: ''	category: 'Mastermind'!!PlayerPegs methodsFor: 'accessing' stamp: 'OJMS 3/15/2015 03:10'!getPeg: peg	"Get the marking mode of a peg"	( peg between: 1 and: 6 )		ifTrue: [ | clr item |			item := pegs at: peg.			clr := item color.						( clr == Color red )				ifTrue: [ ^1. ].			( clr == Color orange )				ifTrue: [ ^2. ].			( clr == Color yellow )				ifTrue: [ ^3. ].			( clr == Color green )				ifTrue: [ ^4. ].			( clr == Color lightBlue )				ifTrue: [ ^5. ].			( clr == Color blue )				ifTrue: [ ^6. ].		].! !!PlayerPegs methodsFor: 'accessing' stamp: 'OJMS 3/15/2015 03:12'!setPeg: peg mode: mode	"Mark a peg with a color"	( peg between: 1 and: 4 )		ifTrue: [ | item |			item := pegs at: peg.						( mode == 1)				ifTrue: [ item setColor: Color red. ].			( mode == 2 )				ifTrue: [ item setColor: Color orange. ].			( mode == 3 )				ifTrue: [ item setColor: Color yellow. ].			( mode == 4 )				ifTrue: [ item setColor: Color green. ].			( mode == 5 )				ifTrue: [ item setColor: Color lightBlue. ].			( mode == 6 )				ifTrue: [ item setColor: Color blue. ].		].! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!PlayerPegs class	instanceVariableNames: ''!!PlayerPegs class methodsFor: 'initialize-release' stamp: 'OJMS 3/15/2015 03:08'!new	| instance |	"Create a row of BigPeg objects for the user to interact with"	instance := super new.	instance cellInset: 5.	instance layoutInset: 5.	instance listDirection: #leftToRight.		1 to: 4 do: [ :n | | peg |		peg := BigPeg new.				instance addPeg: peg.		instance addMorph: peg.	].		^instance.! !
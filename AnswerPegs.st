'From Squeak4.5 of 19 February 2014 [latest update: #13680] on 15 March 2015 at 4:47:49 am'!PegCollection subclass: #AnswerPegs	instanceVariableNames: ''	classVariableNames: ''	poolDictionaries: ''	category: 'Mastermind'!!AnswerPegs methodsFor: 'accessing' stamp: 'OJMS 3/15/2015 03:09'!getPeg: peg	"Get the marking mode of a peg"	( peg between: 1 and: 4 )		ifTrue: [ | clr item |			item := pegs at: peg.			clr := item color.						( clr == Color black )				ifTrue: [ ^1. ].			( clr == Color white )				ifTrue: [ ^2. ].			( clr == Color transparent )				ifTrue: [ ^3. ].		].! !!AnswerPegs methodsFor: 'accessing' stamp: 'OJMS 3/15/2015 03:09'!setPeg: peg mode: mode	"Mark a peg as correct, partially correct, or clear it"	( peg between: 1 and: 4 )		ifTrue: [ | item |			item := pegs at: peg.						( mode == 1)				ifTrue: [ item setColor: Color black. ].			( mode == 2 )				ifTrue: [ item setColor: Color white. ].			( mode == 3 )				ifTrue: [ item setColor: Color transparent. ].		].! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!AnswerPegs class	instanceVariableNames: ''!!AnswerPegs class methodsFor: 'initialize-release' stamp: 'OJMS 3/15/2015 03:07'!new	| instance |		"Add a row to the matrix"	instance := super new.	1 to: 2 do: [ :i | | row |		"Create the row of pegs"		row := RectangleMorph new.		row cellInset: 5.		row hResizing: #shrinkWrap.		row layoutInset: 5.		row layoutPolicy: TableLayout new.		row listDirection: #leftToRight.		row vResizing: #shrinkWrap.				"Don't care about dat background morph, yo"		row borderWidth: 0.		row color: Color transparent.		"Add the pegs to this row"		1 to: 2 do: [ :j | | peg |			peg := SmallPeg new.			instance addPeg: peg.			row addMorph: peg.		].					instance addMorph:	row.	].		^instance.! !